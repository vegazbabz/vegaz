{
  "policyType": "Custom",
  "mode": "All",
  "displayName": "Configure container soft delete on a storage account",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Storage/storageAccounts/blobServices"
        },
        {
          "anyOf": [
            {
              "allOf": [
                {
                  "value": "[requestContext().apiVersion]",
                  "less": "2022-05-01"
                },
                {
                  "field": "Microsoft.Storage/storageAccounts/blobServices/containerDeleteRetentionPolicy.enabled",
                  "equals": false
                }
              ]
            },
            {
              "field": "Microsoft.Storage/storageAccounts/blobServices/containerDeleteRetentionPolicy.enabled",
              "equals": false
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": {
        "conflictEffect": "audit",
        "roleDefinitionIds": [
          "/providers/Microsoft.Authorization/roleDefinitions/17d1049b-9a84-46fb-8f53-869881c3d3ab"
        ],
        "operations": [
          {
            "operation": "addOrReplace",
            "field": "Microsoft.Storage/storageAccounts/blobServices/containerDeleteRetentionPolicy.enabled",
            "value": true
          },
          {
            "operation": "addOrReplace",
            "field": "Microsoft.Storage/storageAccounts/blobServices/containerDeleteRetentionPolicy.days",
            "value": "[parameters('retentionInDays')]"
          }
        ]
      }
    }
  },
  "metadata": {
    "version": "1.0.0",
    "createdBy": "6288a9ae-ec6d-4916-b00d-a7cfa46afd43",
    "createdOn": "2023-01-19T14:13:18.8695145Z",
    "updatedBy": "6288a9ae-ec6d-4916-b00d-a7cfa46afd43",
    "updatedOn": "2023-01-19T22:08:00.7702665Z"
  },
  "parameters": {
    "effect": {
      "type": "String",
      "allowedValues": [
        "Modify",
        "Disabled"
      ],
      "defaultValue": "Modify",
      "metadata": {
        "displayName": "Effect",
        "description": "The effect determines what happens when the policy rule is evaluated to match"
      }
    },
    "retentionInDays": {
      "type": "Integer",
      "defaultValue": 7,
      "metadata": {
        "displayName": "Retention in Days",
        "description": "How long should deleted resources be retained for."
      }
    }
  },
  "id": "/subscriptions/1cb4c4a7-a1eb-4e96-90c1-4d45a4dedc15/providers/Microsoft.Authorization/policyDefinitions/27e53458-eb6b-46ff-b2ea-3776ccfb4593",
  "name": "27e53458-eb6b-46ff-b2ea-3776ccfb4593",
  "type": "Microsoft.Authorization/policyDefinitions"
}